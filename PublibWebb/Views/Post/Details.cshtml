@model DgCmsPad.Models.Post


@{
    ViewData["Title"] = "Details";
    
}


<h1 class="display-4 pb-5">News</h1>

<div class="row">
    
    <div class="container border-danger">

        <div class="owl-carousel news-carousel carousel-item-4 position-relative owl-loaded owl-drag">

            <div class="position-relative overflow-hidden" style="height: 300px;">

                <img src="~/media/posts/@Model.Image" class="img-fluid" /><br />
                <h4>@Model.Name     </h4><br />
                <p>
                    @Model.Date
                </p><br />
                <h5>@Model.Slug</h5><br />
                <div>
                    @Html.Raw(Model.Details)
                </div><br />

                <li class="navbar-nav mr-auto py-0">@Html.ActionLink("Back", "Index", "Post")</li>
            </div>

        </div>

</div>
</div>