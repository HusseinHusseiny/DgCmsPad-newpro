@using ClassLibrary1

@{
    ViewData["Title"] = "Posts";
}

<h1 class="display-4 pb-5">News</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-1"> <img src="~/media/posts/@item.Image" class="img-fluid" />
            <h4>@item.Name     </h4>
            
            <p>
                @item.Date.ToString("C2")
            </p>
            <p>@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })</p>
        </div>
    }
</div>








